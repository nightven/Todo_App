generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String @default("default_password")
  token String   @default("")
  verificationToken String @default("")
  isVerifiedEmail Boolean @default(false)

  todos Todo[]  @relation("UserTodos") 
}

model Todo {
  id        Int      @id @default(autoincrement())
  isPrivate Boolean    @default(false)
  isCompleted Boolean  @default(false)
  title String
  description String

  authorId  Int
  author    User     @relation(fields: [authorId], references: [id], name: "UserTodos")

}
